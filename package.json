{
  "name": "cml-backend",
  "version": "0.0.1",
  "description": "cml backend",
  "author": "Mohamed Reda Khyatti",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start:dev": "nodemon",
    "lint": "tslint 'src/**/*.ts'",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "5.1.0",
    "@nestjs/core": "5.1.0",
    "@types/parse5": "5.0.0",
    "@types/request": "2.47.1",
    "@types/request-promise-native": "^1.0.15",
    "fastify-formbody": "2.0.1",
    "firebase": "5.3.1",
    "node-html-parser": "1.1.8",
    "reflect-metadata": "0.1.12",
    "request": "2.88.0",
    "request-promise-native": "^1.0.5",
    "rxjs": "6.2.2",
    "typescript": "3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "5.1.0",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.1",
    "@types/node": "10.5.8",
    "@types/supertest": "2.0.5",
    "jest": "23.5.0",
    "pre-commit": "1.2.2",
    "nodemon": "1.18.3",
    "prettier": "1.14.2",
    "supertest": "3.1.0",
    "ts-jest": "23.1.3",
    "ts-node": "7.0.1",
    "tsconfig-paths": "3.5.0",
    "tslint": "5.11.0"
  },
  "pre-commit": [
    "lint"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
